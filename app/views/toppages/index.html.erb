<% if logged_in? %>
<h1><%= current_user.name %>のタスクリスト</h1>
<% if @tasks.any? %>
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>No.</th>
        <th>タスク名</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "新規タスクの登録", new_task_path, class: "btn btn-default" %>

<% else %>

<div class="center jumbotron">
  <div class="text-center">
    <h1>かんたんタスクリスト</h1>
    <%= link_to "ユーザ登録", signup_path, class: "btn btn-lg btn-default" %>
  </div>
</div>
<% end %>