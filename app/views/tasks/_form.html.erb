<div class="row">
  <div class="col-xs-12 col-md-offset-2 col-mid-8 col-lg-offset-3 col-lg-6">

<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
  <div id="error_explanation" class="alert-warning">
    <ul><% task.errors.full_messages.each do |message| %>   
      <li><%= message %></li>
        <% end %>
    </ul>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content, "タスク名" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :status, "ステータス" %>
    <%= f.text_field :status, class: "form-control" %>
  </div>

  <%= f.submit "登録", class: "btn btn-default" %>

<% end %>

  </div>
</div>