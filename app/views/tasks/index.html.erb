<h1>タスクリスト</h1>

<% if @tasks.any? %>
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>No.</th>
        <th>タスク名</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.id, task %></td>
        <td><%= task.content %></td>
        <td><%= task.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "新規タスクの登録", new_task_path, class: "btn btn-default" %>